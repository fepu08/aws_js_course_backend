{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["models/*"],
      "@functions": ["functions/index.ts"],
      "@functions/*": ["functions/*"],
      "@mocks/*": ["mocks/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": false
  }
}
