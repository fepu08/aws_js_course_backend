{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@models/*": ["models/*"],
      "@functions": ["functions/index.ts"],
      "@functions/*": ["functions/*"],
      "@mocks/*": ["mocks/*"],
      "@schema/*": ["schema/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": false
  },
  "ts-node": { "esm": true }
}
